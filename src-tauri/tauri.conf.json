{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SlideSounds",
  "version": "0.1.0",
  "identifier": "com.phonicsreader.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "SlideSounds",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Education",
    "publisher": "Phonics Reader",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": "FF64TZB7HR",
      "minimumSystemVersion": "13.0"
    }
  }
}
